<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
   <display-name>Test for FOAF+SSL</display-name>
    <servlet>
        <servlet-name>simple login</servlet-name>
        <servlet-class>net.java.dev.sommer.foafssl.login.IdpServlet</servlet-class>
        <init-param>
            <description>The path to the keystore</description>
            <param-name>keystorePath</param-name>
            <param-value>/home/gfish/apache-tomcat-6.0.18/conf/foafssl.kdb</param-value>
        </init-param>
        <init-param>
            <description>the password of the keystore</description>
            <param-name>keystorePassword</param-name>
            <param-value>password</param-value>
        </init-param>
        <init-param>
            <description>The alias of the key in the keystore to use</description>
            <param-name>keyAlias</param-name>
            <param-value>foafssl</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>InsecureLoginService</servlet-name>
        <servlet-class>net.java.dev.sommer.foafssl.login.InsecureLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>simple login</servlet-name>
        <url-pattern>/idp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsecureLoginService</servlet-name>
        <url-pattern>/insecureLogin</url-pattern>
    </servlet-mapping>
    </web-app>
